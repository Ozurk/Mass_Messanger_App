#:kivy 2.3.0



<MassMessage>
    StartScreen:
    NameSelectorScreen:
    ReviewScreen:

<StartScreen>
    BoxLayout: 
        orientation: "vertical"
        name: "StartScreen"
        padding:40
        Label:
            text: 'Core Mechanical Mass Messaging App'
            font_size: 36
            halign: 'center'
            valign: 'middle'
            size_hint_y: .2
        Button:
            size_hint_y: .3
            text: "Continue"
            on_release: app.root.current = "NameSelectorScreen"
            font_size: 25
        Button:
            size_hint_y: .1
            text: "Help"

<NameSelectorScreen>
    name: "NameSelectorScreen"
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint_y: .1
            text: "Select the team members you would like to message"
        BoxLayout:
            size_hint_y: .1
            Button:
                text: "Select All"
                on_release: root.select_unselect_all()
        ScrollView:
            size_hint_y: .7
            GridLayout:
                id: NameGrid
                size_hint_y: None
                height: 30000
                rows:1000
                cols:4
        Button:
            size_hint_y: .15
            text: "Continue"
            on_release: app.root.current = "ReviewScreen"


<ReviewScreen>
    name: "ReviewScreen"
    BoxLayout:
        ScrollView:
            Label:
                id: recipients_label
                size_hint: 1, None
                text_size: self.width, None
                height: self.texture_size[1]
                text: app.recipients_var
        TextInput:
    BoxLayout:
        size_hint_y: .25
        Button:
            text: "continue"


